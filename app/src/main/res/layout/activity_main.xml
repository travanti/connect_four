<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearLayout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="135dp"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:id="@+id/player1Side">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp" />

            <TextView
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/numberWinsP1"
                android:textSize="36sp"
                android:text="@string/player1_wins" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/player1"
                android:id="@+id/p1Tokens"
                android:padding="50dp"
                android:background="#ffff000b" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/gameBoard">

            <com.example.administrator.connectfour.SVCol1
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol1"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol2
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol2"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol3
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol3"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol1
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol4"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol2
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol5"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol3
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol6"
                android:layout_gravity="center_vertical" />
            <com.example.administrator.connectfour.SVCol1
                android:layout_width="90dp"
                android:layout_height="570dp"
                android:id="@+id/gameBoardCol7"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/player2Side">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settingsButton"
                android:layout_gravity="right"
                android:background="#00ffffff"
                android:src="@mipmap/settings_gear" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="110dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/player2_wins"
                android:id="@+id/numberWinsp2"
                android:layout_weight="0"
                android:textSize="36sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/player2"
                android:id="@+id/textView"
                android:background="#fffff100"
                android:padding="45dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
